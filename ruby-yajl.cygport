ORIG_PN="yajl-ruby"
inherit rubygem

NAME="ruby-yajl"
VERSION=1.3.0
RELEASE=2
CATEGORY="Ruby"
SUMMARY="Ruby Yajl bindings"
DESCRIPTION="Ruby C bindings to the excellent Yajl JSON stream-based parser
library."

PKG_NAMES="${NAME} ${NAME}-doc"
ruby_yajl_CONTENTS="--exclude=examples ${RUBYGEM_EXTDIR#/} ${RUBYGEM_INSTDIR#/} ${RUBYGEM_SPEC#/}"
ruby_yajl_doc_CONTENTS="${RUBYGEM_DOCDIR#/} ${RUBYGEM_INSTDIR#/}/examples/"
